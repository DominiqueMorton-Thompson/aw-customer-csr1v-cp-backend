{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/" 
    ],
    "baseUrl": "./",
    "types": [
      "webix"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "./node_modules/*",
    "./packages/*",    
    "**/*.spec.ts"
  ]
}
